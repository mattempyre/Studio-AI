{
  "name": "videogen-ai-studio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "dotenv -e .env.local -- concurrently -n frontend,backend,inngest -c blue,green,magenta \"npm run dev\" \"npm run server\" \"docker-compose up inngest\"",
    "build": "vite build",
    "preview": "vite preview",
    "server": "tsx watch src/backend/server.ts",
    "server:build": "tsc -p src/backend/tsconfig.json",
    "db:init": "tsx scripts/init-db.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "setup:ports": "tsx scripts/setup-worktree-ports.ts",
    "trigger-audio": "dotenv -e .env.local -- tsx scripts/test-audio-job.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:components": "vitest run --config vitest.config.components.ts",
    "test:components:watch": "vitest --config vitest.config.components.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:components && npm run test:e2e"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "@tanstack/react-router": "^1.151.1",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.2",
    "inngest": "^3.49.2",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.0.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "ws": "^8.19.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.56",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.4",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^2.1.8"
  }
}
